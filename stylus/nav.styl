	background rgba(0,0,0,0.1)
	color white
	font-family "RLight"
	font-size .9rem
	padding .8rem 1.2rem .8rem 2.5rem
	position absolute
	right 0
	top 0
.nav-item
	display inline-block
	font-size .8rem
	padding .7rem .8rem
	transition .3s ease all
	vertical-align top
	&:hover
		background rgba(255,255,255,0.1)
		
