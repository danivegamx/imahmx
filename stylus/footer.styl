#dvmx-link
	color white
	font-family "RRegular"
	transition .3s ease all
	&:hover
		color #ddd
#dvmx
	background $bluegray
	color white
	font-family "RLight"
	padding 5px 0
	text-align center
	& figure
		margin 0
		& img
			width 200px
#fb
	display block
	&:before
		content "\f082  "
		font-family "icomoon"
#footer-address
	padding-left 2.5rem
	position relative
	&:after
		content "\e625"
		font-family "icomoon"
		left .8rem
		position absolute
		bottom 8.4rem
	&:before
		content "\f041"
		font-family "icomoon"
		left 1rem
		position absolute
#tw
	display block
	&:before
		content "\f081  "
		font-family "icomoon"
.footer-dark
	background rgba(0,0,0,0.1)
	font-size .8rem
	padding .4rem
.footer-section
	color white
	font-family "RLight"
	font-size .9rem
	padding 1.5rem .5rem
	vertical-align top
.italic
	font-style italic